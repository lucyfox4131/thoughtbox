<div class="container">
  <div class="col-md-6" id="new-sign-up">

    <h1>Sign Up</h1>

    <%= form_for(@user) do |f| %>
    <%= f.label :email %>
    <%= f.text_field :email %><br>
    <%= f.label :password %>
    <%= f.text_field :password %><br>
    <%= f.label :password_confirmation %>
    <%= f.text_field :password_confirmation %><br>
    <%= f.submit "Create Account" %>
    <% end %>

  </div>

  <div class="col-md-6" id="log-in">
    <h1>Log In</h1>
    <%= form_for(@user) do |f| %>
    <%= f.label :email %>
    <%= f.text_field :email %><br>
    <%= f.label :password %>
    <%= f.text_field :password %><br>
    <%= f.submit "Log In" %>
    <% end %>
  </div>
</div>
